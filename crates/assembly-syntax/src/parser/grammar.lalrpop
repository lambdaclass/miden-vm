#[inline]
Ops: Vec<Op> = {
    <l:@L> <ops:Op+> <r:@R> =>? {
        let ops = ops.into_iter().flat_map(|ops| ops.into_iter()).collect::<Vec<_>>();
        if ops.len() > u16::MAX as usize {
            Err(ParseError::User { error: ParsingError::CodeBlockTooBig { span: span!(source_id, l, r) } })
        } else {
            Ok(ops)
        }
