    <l:@L> <value:bin_value> <r:@R> =>? {
        match value {
            BinEncodedValue::U8(v) => Ok(v as u32),
            BinEncodedValue::U16(v) => Ok(v as u32),
            BinEncodedValue::U32(v) => Ok(v),
        }
    }
