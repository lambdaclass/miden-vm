U32: u32 = {
    <l:@L> <n:uint> <r:@R> =>? {
        u32::try_from(n).map_err(|error| ParseError::User {
            error: ParsingError::InvalidLiteral { span: span!(source_id, l, r), kind: LiteralErrorKind::U32Overflow },
        })
    },

    <l:@L> <value:hex_value> <r:@R> =>? {
